# Build stage
FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn -q -DskipTests package

# Runtime stage
FROM eclipse-temurin:17-jre
ENV APP_HOME=/usr/src/app
WORKDIR $APP_HOME
EXPOSE 8070
COPY --from=build /app/target/*SNAPSHOT.jar app.jar
ENTRYPOINT ["java","-jar","app.jar"]
